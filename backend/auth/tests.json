{
  "tests": [
    {
      "name": "Register new client",
      "method": "POST",
      "path": "/?action=register",
      "body": {
        "email": "test@example.com",
        "phone": "+79991234567",
        "password": "SecurePass123",
        "name": "Test Client",
        "role": "client",
        "organization": "Test Company"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "token": "string",
        "user": {
          "id": "number",
          "email": "string",
          "phone": "string",
          "name": "string",
          "role": "string"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with email and password",
      "method": "POST",
      "path": "/?action=login",
      "body": {
        "email": "test@example.com",
        "password": "SecurePass123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "token": "string",
        "user": {
          "id": "number"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Register - missing password",
      "method": "POST",
      "path": "/?action=register",
      "body": {
        "email": "test2@example.com",
        "name": "Test User"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
